{
  "name": "@sladg/nextjs-lambda",
  "version": "2.0.0",
  "description": "Plug-and-play lambda for replacing default NextJS image optimization handler.",
  "repository": {
    "type": "git",
    "url": "https://github.com/sladg/nextjs-lambda"
  },
  "license": "MIT",
  "author": "Jan Soukup <jan@ssoukup.com>",
  "exports": {
    "./sharp-layer/zip": "./dist/sharp-layer.zip",
    "./image-handler/zip": "./dist/image-handler.zip",
    "./server-handler/zip": "./dist/server-handler.zip"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "app": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run build:functions && npm run build:sharp && npm run build:main",
    "build:functions": "zip-it-and-ship-it ./lib/standalone ./dist",
    "build:main": "rollup -c",
    "build:sharp": "./scripts/build-sharp-layer.sh",
    "release": "auto shipit"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.39.1-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.39.1-alpha.0",
    "@aws-sdk/client-s3": "^3.142.0",
    "@types/archiver": "^5.3.1",
    "@types/aws-lambda": "^8.10.101",
    "@types/node": "^18.6.3",
    "archiver": "^5.3.1",
    "aws-cdk-lib": "^2.39.1",
    "commander": "^9.4.0",
    "constructs": "^10.1.92",
    "replace-in-file": "^6.3.5",
    "serverless-http": "^3.0.2",
    "simple-git": "^3.13.0"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^10.37.4",
    "@auto-it/git-tag": "^10.37.4",
    "@auto-it/npm": "^10.37.4",
    "@auto-it/released": "^10.37.4",
    "@auto-it/upload-assets": "^10.37.4",
    "@netlify/zip-it-and-ship-it": "^6.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@tsconfig/node16": "^1.0.3",
    "critters": "^0.0.16",
    "auto": "^10.37.4",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "next": "^12"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}